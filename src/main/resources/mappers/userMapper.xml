<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.RamenRecipeBook.user.dao.UserDAO">
 	<insert id="insertNewUser" parameterType="map">
 		INSERT INTO
 			`user`
 		(
 			`loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `phone`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{email}
 			, #{phone}
 			, now()
 			, now()
 		)
 	</insert>
 
 </mapper>